{
  "name": "Link độc",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Link độc",
  
  "browser_action": {
    "default_title": "Link độc",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["clipboardWrite", "storage"]
}
